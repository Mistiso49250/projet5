{% block body %}
	<!-- notification message d'erreurs -->
	{% for message in app.flashes('error') %}
		<h2 class="danger">
			{{ message }}
		</h2>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<h2 class="success">
			{{ message }}
		</h2>
	{% endfor %}

	<div class="homeHeader">
		<h4>Listes des articles</h4>
