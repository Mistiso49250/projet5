<div class="col mb-3 cardMobile">
	<a href="{{ path('article', {'slug': article.slug}) }} ">
		<div class="card text-center h-100 cardMobileWidth">
			<img src="{{ asset ('images/articles/' ~ article.image) | imagine_filter('article') }}" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">{{ article.titre }}</h5>
				<p class="card-text">{{ article.extrait | nl2br }}</p>
				<p class="cardPrice">{{ article.prixTTC|format_currency('EUR', locale='fr') }}</p>
				{# <a class="btn btn-info btn-rounded mb-4" href="">Ajouter au panier</a> #}
			</div>
		</div>
	</a>
</div>
