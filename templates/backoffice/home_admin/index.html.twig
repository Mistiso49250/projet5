{% extends 'basebackoffice.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
	<!-- notification message d'erreurs -->
	{% for message in app.flashes('error') %}
		<h5 class="alert alert-danger">
			{{ message }}
		</h5>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<h5 class="alert alert-success">
			{{ message }}
		</h5>
	{% endfor %}
	<!-- notification message d'erreurs -->

	<div class="dashboard">
		<div class="row">
			<ul class="nav flex-column navbar-light bg-light col-sm-2">
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('article_index') }}">Article</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('marque_index') }}">Marque</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('tva_index') }}">Tva</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('age_index') }}">Tranche d'âge</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('genre_index') }}">Genre</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('user_back_index') }}">Utilisateurse</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{ path('slider_index') }}">Slider</a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Categorie</a>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="{{ path('categorie_index') }}">Categorie</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('categorie_principal_index') }}">Categorie Principal</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('categorie_secondaire_index') }}">Categorie Secondaire</a>
						</li>
					</ul>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Page 404</a>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="{{ path('slider_index') }}">404 article</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('slider_index') }}">404 marque</a>
						</li>
					</ul>
				</li>
			</ul>

			<div class="dashboardContent col-sm-10">
				<h3><i class="fa fa-home" aria-hidden="true"></i> Tableau de bord</h3>
				<a href="{{ path('article_new') }}" class="btn btn-outline-primary newArticle">Créer un nouvel article</a>

				<div class="row d-flex align-items-center justify-content-space-around statsContent">
					<div class="weeklySales col-sm-3">
						<img src="{{ asset ('images/circle.svg') }}" class="card-img-absolute" alt="circlebackground">
						<h4 class="textWhite">Ventes hebdomadaires
							<i class="fa fa-line-chart" aria-hidden="true"></i>
						</h4>

						<h2 class="textWhite">6 000 € {# format_currency('EUR', locale='fr' #}</h2>
						<h5 class="textWhite">Augementé de 3%</h5>
					</div>
					<div class="weeklyOrders col-sm-3">
						<img src="{{ asset ('images/circle.svg') }}" class="card-img-absolute" alt="circlebackground">
						<h4 class="textWhite">Commandes hebdomadaires
							<i class="fa fa-bookmark-o" aria-hidden="true"></i>
						</h4>

						<h2 class="textWhite">250</h2>
						<h5 class="textWhite">Diminué de 10%</h5>
					</div>
					<div class="visitorsOnline col-sm-3">
						<img src="{{ asset ('images/circle.svg') }}" class="card-img-absolute" alt="circlebackground">
						<h4 class="textWhite">Visiteurs en ligne
							<i class="fa fa-users" aria-hidden="true"></i>
						</h4>

						<h2 class="textWhite">1200</h2>
						<h5 class="textWhite">Augementé de 8%</h5>
					</div>
				</div>

				<div class="row d-flex align-items-center justify-content-space-around charsContent">

					<div class="chars col-sm-7">
						<h4>Statistiques De Visites Et De Ventes</h4>
						<div class="charsLegend">
							<ul>
								<li>
									<span class="roundedSpan visits"></span>visite</li>
								<li>
									<span class="roundedSpan sales"></span>vente</li>
								<li>
									<span class="roundedSpan abandonment"></span>abandon</li>
							</ul>
						</div>
						<img src="{{ asset ('images/chart.png') }}" class="chars-img-absolute" alt="">

					</div>
					<div class="traffic col-sm-4">
						<h4>Sources de trafic</h4>
						<img src="{{ asset ('images/chartCircle.png') }}" class="traffic-img-absolute" alt="">
						<div class="trafficLegend">
							<ul>
								<li>
									<span class="roundedSpan search"></span>moteurs de recherche 40%</li>
								<li>
									<span class="roundedSpan direct"></span>clic direct 30%</li>
								<li>
									<span class="roundedSpan bookmarks"></span>favoris 30%</li>
							</ul>
						</div>
					</div>
				</div>

				<div class="message">
					<h4>Messages reçu</h4>
					<table class="table">
						<thead>
							<tr class="table-info">
								<th>Nom</th>
								<th>Sujet</th>
								<th>Status</th>
								<th>Date de réception</th>
							</tr>
						</thead>
						<tbody>
							{# {% for  in  %} #}
							<tr>
								<td>Nom 1</td>
								<td>Sujet 1</td>
								<td>Progress</td>
								<td>Date 1</td>
							</tr>
							{# {% else %} #}
						{# <tr>
															<td colspan="11">no records found</td>
														</tr> #}
							{# {% endfor %} #}
						</tbody>
					</table>
				</div>

			</div>
		</div>

	{% endblock %}
