{% extends 'basebackoffice.html.twig' %}

{% block title %}CategoriePrincipal index{% endblock %}

{% block body %}
    <h1>CategoriePrincipal index</h1>
    <a href="{{ path('categorie_principal_new') }}" class="btn btn-outline-primary newCategoriePrinc">Créer une nouvelle catégorie principal</a>

    <table class="table table-article">
        <thead>
            <tr class="table-info">
                <th>Id</th>
                <th>Description</th>
                <th>Code</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_principal in categorie_principals %}
            <tr>
                <td>{{ categorie_principal.id }}</td>
                <td>{{ categorie_principal.description }}</td>
                <td>{{ categorie_principal.code }}</td>
                <td>{{ categorie_principal.slug }}</td>
                <td>
                    <a href="{{ path('categorie_principal_show', {'id': categorie_principal.id}) }}" class="btn btn-outline-primary">apperçu</a>
                    <a href="{{ path('categorie_principal_edit', {'id': categorie_principal.id}) }}" class="btn btn-outline-success">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
