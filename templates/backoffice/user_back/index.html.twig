{% extends 'basebackoffice.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	<h1>User index</h1>
	{# <a href="{{ path('user_back_new') }}" class="btn btn-outline-primary newUser">Gestion des utilisateurs</a> #}

	<table class="table">
		<caption>Liste des utilisateurs</caption>
		<thead>
			<tr class="table-info">
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>IsVerified</th>
				<th>Lastname</th>
				<th>Firstname</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.isVerified ? '<i class="fas fa-check-circle agree"></i>' : '<i class="fas fa-check-circle false"></i>' }}</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>
						<a href="{{ path('user_back_edit', {'id': user.id}) }}" class="btn btn-outline-success">editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucun utilisateur trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
