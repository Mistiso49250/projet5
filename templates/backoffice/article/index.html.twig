{% extends 'basebackoffice.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Article index</h1>
		<a href="{{ path('article_new') }}" class="btn btn-outline-primary newArticle">Créer un nouvel article</a>

		<table class="table">
			<thead>
				<tr class="table-info">
					<th>Id</th>
					<th>Titre</th>
					<th>Extrait</th>
					<th>Image</th>
					<th>PrixTTC</th>
					<th>New</th>
					<th>Selection</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.id }}</td>
						<td>{{ article.titre }}</td>
						<td>{{ article.extrait }}</td>
						<td class="tdBackoffice"><img src="{{ asset ('images/articles/' ~ article.image) }}" alt="..."></td>
						<td>{{ article.prixTTC }} €</td>
						<td>{{ article.new ? '<i class="fas fa-check-circle agree"></i>' : '<i class="fas fa-check-circle false"></i>' }}</td>
						<td>{{ article.selection ? '<i class="fas fa-check-circle agree"></i>' : '<i class="fas fa-check-circle false"></i>' }}</td>
						<td>
							<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-outline-primary">apperçu</a>
							<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-success">editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
