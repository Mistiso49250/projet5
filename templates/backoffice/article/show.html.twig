{% extends 'basebackoffice.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Extrait</th>
                <td>{{ article.extrait }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ article.detail }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset ('images/articles' ~ article.image) | imagine_filter('marque') }}" alt="..."></td>
            </tr>
            <tr>
                <th>PrixTTC</th>
                <td>{{ article.prixTTC }} €</td>
            </tr>
            <tr>
                <th>New</th>
                <td>{{ article.new ? '<i class="fas fa-check-circle agree"></i>' : '<i class="fas fa-check-circle false"></i>' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Selection</th>
                <td>{{ article.selection ? '<i class="fas fa-check-circle agree"></i>' : '<i class="fas fa-check-circle false"></i>' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}" class="btn btn-outline-primary retourListe">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-success">editer</a>

    {{ include('backoffice/article/_delete_form.html.twig') }}
{% endblock %}
