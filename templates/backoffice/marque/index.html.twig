{% extends 'basebackoffice.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Marque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.titre }}</td>
                <td>{{ marque.image }}</td>
                <td>{{ marque.slug }}</td>
                <td>
                    <a href="{{ path('marque_show', {'id': marque.id}) }}">show</a>
                    <a href="{{ path('marque_edit', {'id': marque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('marque_new') }}">Cr√©er une nouvelle marque</a>
{% endblock %}
