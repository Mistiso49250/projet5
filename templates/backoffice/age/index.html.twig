{% extends 'basebackoffice.html.twig' %}

{% block title %}Age index
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Age index</h1>
		<a href="{{ path('age_new') }}" class="btn btn-outline-primary newAge">Créer une nouvelle tranche d' âge</a>

		<table class="table">
			<thead>
				<tr class="table-info">
					<th>Id</th>
					<th>Code</th>
					<th>Slug</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for age in ages %}
					<tr>
						<td>{{ age.id }}</td>
						<td>{{ age.code }}</td>
						<td>{{ age.slug }}</td>
						<td>
							<a href="{{ path('age_show', {'id': age.id}) }}" class="btn btn-outline-primary">apperçu</a>
							<a href="{{ path('age_edit', {'id': age.id}) }}" class="btn btn-outline-success">editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
