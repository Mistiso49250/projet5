{% extends 'basebackoffice.html.twig' %}

{% block title %}Tva index{% endblock %}

{% block body %}
    <h1>Tva index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ValeurTVA</th>
                <th>Slug</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tva in tvas %}
            <tr>
                <td>{{ tva.id }}</td>
                <td>{{ tva.valeurTVA }}</td>
                <td>{{ tva.slug }}</td>
                <td>{{ tva.code }}</td>
                <td>
                    <a href="{{ path('tva_show', {'id': tva.id}) }}" class="btn btn-outline-primary">show</a>
                    <a href="{{ path('tva_edit', {'id': tva.id}) }}" class="btn btn-outline-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tva_new') }}" class="btn btn-outline-primary">Cr√©er une nouvelle tva</a>
{% endblock %}
